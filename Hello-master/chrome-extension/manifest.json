{
  "manifest_version": 3,
  "name": "Session Recorder",
  "version": "1.0",
  "description": "Record user sessions and generate Selenium/JMeter scripts",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Session Recorder"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}